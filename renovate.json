{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": ["config:recommended"],

  "enabledManagers": ["helmv3"],

  "includePaths": ["apps/**"],

  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard (Helm charts in /apps)",

  "packageRules": [
    {
      "matchManagers": ["helmv3"],
      "matchFileNames": ["apps/**"],
      "groupName": "helm dependencies (apps)"
    },

    {
      "matchManagers": ["helmv3"],
      "matchDepNames": ["cert-manager"],
      "groupName": "cert-manager updates"
    },

    {
      "matchManagers": ["helmv3"],
      "matchDepNames": ["external-secrets"],
      "groupName": "external-secrets updates"
    },

    {
      "matchManagers": ["helmv3"],
      "matchDepNames": ["grafana-operator", "grafana"],
      "groupName": "grafana stack updates"
    }
  ]
}
