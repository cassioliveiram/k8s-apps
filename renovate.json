{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "regexManagers": [
    {
      "fileMatch": ["^argo-applications/.*\\.ya?ml$"],
      "matchStrings": [
        "chart:\\s*(?<packageName>istiod|base|gateway)\\s*\\n.*?targetRevision:\\s*[\"']?(?<currentValue>[0-9a-zA-Z\\.-]+)[\"']?"
      ],
      "datasourceTemplate": "helm",
      "depNameTemplate": "istio/{{packageName}}",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["istio/istiod"],
      "matchCurrentVersion": "1.22.x",
      "allowedVersions": "1.22.x",
      "rangeStrategy": "replace",
      "groupName": "istio patch updates"
    }
  ]
}